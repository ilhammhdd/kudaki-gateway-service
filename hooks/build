#!/bin/bash

docker build -t $IMAGE_NAME --build-arg ADDRESS=$ADDRESS --build-arg GRPC_SUBDOMAIN=$GRPC_SUBDOMAIN --build-arg GRPC_PORT=$GRPC_PORT --build-arg KAFKA_BROKERS=$KAFKA_BROKERS --build-arg REST_PORT=$REST_PORT --build-arg USER_SERVICE_GRPC_ADDRESS=$USER_SERVICE_GRPC_ADDRESS --build-arg REST_SUBDOMAIN=$REST_SUBDOMAIN --build-arg DOCKER_NETWORK=$DOCKER_NETWORK --build-arg KAFKA_VERSION=$KAFKA_VERSION .